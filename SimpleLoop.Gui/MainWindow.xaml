<Window x:Class="SimpleLoop.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLoop.Gui"
        mc:Ignorable="d"
        Title="SimpleLoop - Game Text Capture and Voice Management" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Name="StartCaptureButton" Content="Start Capture" Width="120" Height="32" 
                        Background="#0E639C" Foreground="White" Click="StartCaptureButton_Click" Margin="0,0,10,0"/>
                <Button Name="StopCaptureButton" Content="Stop Capture" Width="120" Height="32" 
                        Background="#D13438" Foreground="White" Click="StopCaptureButton_Click" IsEnabled="False" Margin="0,0,20,0"/>
                
                <TextBlock Text="Textboxes:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Name="TextboxCountText" Text="0" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0"/>
                
                <TextBlock Text="Performance:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Name="PerformanceText" Text="0ms" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                
                <CheckBox Name="AlwaysOnTopCheckBox" Content="Always on Top" Foreground="White" 
                          VerticalAlignment="Center" Margin="0,0,0,0" Checked="AlwaysOnTopCheckBox_Checked" 
                          Unchecked="AlwaysOnTopCheckBox_Unchecked"/>
            </StackPanel>
        </Border>

        <!-- Main Content Tabs -->
        <TabControl Grid.Row="1" Background="White" BorderThickness="0">
            
            <!-- Live Monitoring Tab -->
            <TabItem Header="Live Monitor">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Live Log -->
                    <GroupBox Header="Live Capture Log" Grid.Column="0">
                        <TextBox Name="LiveLogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                                 FontFamily="Consolas" FontSize="11" Background="#1E1E1E" Foreground="#D4D4D4"/>
                    </GroupBox>
                    
                    <!-- Live Stats -->
                    <GroupBox Header="Statistics" Grid.Column="2">
                        <StackPanel Margin="10">
                            <TextBlock Text="Capture Performance" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="FPS: " Width="60"/>
                                <TextBlock Name="FpsText" Text="0.0" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Runtime: " Width="60"/>
                                <TextBlock Name="RuntimeText" Text="00:00" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <TextBlock Text="Detection Results" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Frames: " Width="60"/>
                                <TextBlock Name="FrameCountText" Text="0" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Processed: " Width="60"/>
                                <TextBlock Name="ProcessedText" Text="0" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Textboxes: " Width="60"/>
                                <TextBlock Name="TextboxFoundText" Text="0" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <TextBlock Text="Dialogue Catalog" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Total: " Width="60"/>
                                <TextBlock Name="DialogueCountText" Text="0" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Speakers: " Width="60"/>
                                <TextBlock Name="SpeakerCountText" Text="0" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Dialogue Catalog Tab -->
            <TabItem Header="Dialogue Catalog">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and Filters -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                        <TextBox Name="DialogueSearchBox" Width="300" Height="25" 
                                 VerticalContentAlignment="Center" TextChanged="DialogueSearchBox_TextChanged"
                                 Tag="Search dialogue text..."/>
                        <Button Content="Search" Width="80" Height="25" Margin="10,0,20,0" Click="SearchDialogue_Click"/>
                        
                        <ComboBox Name="SpeakerFilterBox" Width="150" Height="25" Margin="0,0,10,0" 
                                  SelectionChanged="SpeakerFilterBox_SelectionChanged"/>
                        <Button Content="Clear Filters" Width="100" Height="25" Click="ClearFilters_Click"/>
                        
                        <Button Content="Delete Selected" Width="120" Height="25" Margin="20,0,0,0" 
                                Background="#D13438" Foreground="White" Click="DeleteSelectedDialogue_Click"/>
                    </StackPanel>
                    
                    <!-- Dialogue Grid -->
                    <DataGrid Name="DialogueDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                              CanUserAddRows="False" GridLinesVisibility="Horizontal" 
                              AlternatingRowBackground="#F5F5F5" SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*" IsReadOnly="False"/>
                            <DataGridTextColumn Header="Speaker" Binding="{Binding Speaker}" Width="150" IsReadOnly="False"/>
                            <DataGridTextColumn Header="Voice" Binding="{Binding VoiceProfile}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding SeenCount}" Width="60" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen}" Width="130" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Speaker Profiles Tab -->
            <TabItem Header="Speaker Profiles">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Speaker List -->
                    <GroupBox Header="Speaker Profiles" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Button Content="New Speaker" Grid.Row="0" Height="30" Margin="0,0,0,10" 
                                    Background="#28A745" Foreground="White" Click="NewSpeaker_Click"/>
                            
                            <ListBox Name="SpeakerListBox" Grid.Row="1" SelectionChanged="SpeakerListBox_SelectionChanged"/>
                            
                            <Button Content="Delete Speaker" Grid.Row="2" Height="30" Margin="0,10,0,0" 
                                    Background="#D13438" Foreground="White" Click="DeleteSpeaker_Click"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Speaker Editor -->
                    <GroupBox Header="Speaker Details" Grid.Column="2" Name="SpeakerEditorGroup" IsEnabled="False">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Name="SpeakerNameBox" Grid.Row="0" Grid.Column="1" Height="25" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="Character Type:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <ComboBox Name="CharacterTypeBox" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,0,0,10">
                                        <ComboBoxItem Content="Princess"/>
                                        <ComboBoxItem Content="King"/>
                                        <ComboBoxItem Content="Knight"/>
                                        <ComboBoxItem Content="Sage"/>
                                        <ComboBoxItem Content="NPC"/>
                                        <ComboBoxItem Content="Mysterious"/>
                                        <ComboBoxItem Content="Shopkeeper"/>
                                        <ComboBoxItem Content="Guard"/>
                                    </ComboBox>
                                    
                                    <TextBlock Text="TTS Voice:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <ComboBox Name="TtsVoiceBox" Grid.Row="2" Grid.Column="1" Height="25" Margin="0,0,0,10">
                                        <ComboBoxItem Content="alloy"/>
                                        <ComboBoxItem Content="echo"/>
                                        <ComboBoxItem Content="fable"/>
                                        <ComboBoxItem Content="onyx"/>
                                        <ComboBoxItem Content="nova"/>
                                        <ComboBoxItem Content="shimmer"/>
                                    </ComboBox>
                                    
                                    <TextBlock Text="TTS Speed:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <Slider Name="TtsSpeedSlider" Grid.Row="3" Grid.Column="1" Minimum="0.25" Maximum="4.0" 
                                            Value="1.0" TickFrequency="0.25" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,0,10"/>
                                    <TextBox Name="SpeakerDescriptionBox" Grid.Row="4" Grid.Column="1" Height="60" 
                                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="Audio Effects" Grid.Row="5" Grid.ColumnSpan="2" FontWeight="Bold" 
                                               FontSize="14" Margin="0,10,0,10"/>
                                    
                                    <TextBlock Text="Effects Preset:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,0,10"/>
                                    <TextBox Name="AudioEffectsBox" Grid.Row="6" Grid.Column="1" Height="60" 
                                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                                             Margin="0,0,0,10" ToolTip="Enter audio effects like: reverb=0.3, echo=0.2, pitch=1.1, lowpass=1000"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                    <Button Content="Preview Voice" Width="120" Height="30" Margin="0,0,10,0" 
                                            Click="PreviewVoice_Click"/>
                                    <Button Content="Save Changes" Width="120" Height="30" 
                                            Background="#28A745" Foreground="White" Click="SaveSpeaker_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F0F0F0" Height="25">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Dialogues: "/>
                    <TextBlock Name="StatusDialogueCount" Text="0" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Speakers: "/>
                    <TextBlock Name="StatusSpeakerCount" Text="0" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="FPS: "/>
                    <TextBlock Name="StatusFps" Text="0.0" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Runtime: "/>
                    <TextBlock Name="StatusRuntime" Text="00:00" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
