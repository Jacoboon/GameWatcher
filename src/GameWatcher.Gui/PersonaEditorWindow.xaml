<Window x:Class="GameWatcher.Gui.PersonaEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Persona Editor" Height="220" Width="360">
  <StackPanel Margin="10">
    <StackPanel Orientation="Horizontal">
      <TextBlock Width="80" Text="Model:"/>
      <TextBox x:Name="ModelBox" Width="220"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
      <TextBlock Width="80" Text="Voice:"/>
      <TextBox x:Name="VoiceBox" Width="220"/>
    </StackPanel>
    <Separator Margin="0,10,0,10"/>
    <TextBlock Text="FX (placeholders)"></TextBlock>
    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
      <TextBlock Width="80" Text="Pitch:"/>
      <TextBox x:Name="PitchBox" Width="80"/>
      <TextBlock Width="80" Text="Reverb:"/>
      <TextBox x:Name="ReverbBox" Width="80"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="Save" Width="80" Click="Save_Click"/>
    </StackPanel>
  </StackPanel>
</Window>

