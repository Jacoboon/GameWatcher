{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "GameWatcher": {
    "AutoStart": true,
    "DetectionIntervalMs": 2000,
    "PackDirectories": [
      "packs",
      "../FF1.PixelRemaster"
    ]
  },
  "Capture": {
    "TargetFps": 10,
    "EnableOptimization": true,
    "OptimizationThreshold": 0.85
  },
  "OCR": {
    "Language": "en-US",
    "ConfidenceThreshold": 0.7,
    "EnablePreprocessing": true
  },
  "Audio": {
    "MasterVolume": 80,
    "OutputDevice": "Default",
    "EnableCrossfade": true
  }
}