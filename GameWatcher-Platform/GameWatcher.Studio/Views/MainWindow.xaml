<Window x:Class="GameWatcher.Studio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="GameWatcher Studio V2" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="GameStatusIndicator" Width="12" Height="12" Fill="Orange" Margin="0,0,8,0"/>
                    <TextBlock Text="Game:" FontWeight="SemiBold" Foreground="White" Margin="0,0,4,0"/>
                    <TextBlock x:Name="GameStatusText" Text="No game detected" Foreground="White" FontWeight="Normal"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Pack:" FontWeight="SemiBold" Foreground="White" Margin="0,0,4,0"/>
                    <TextBlock x:Name="PackStatusText" Text="No pack loaded" Foreground="White" FontWeight="Normal"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Style="{DynamicResource DefaultTabControlStyle}">
            
            <!-- Pack Manager Tab -->
            <TabItem Header="Pack Manager">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Available Game Packs" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <DataGrid x:Name="PackDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Supported Games" Binding="{Binding SupportedGames}" Width="200"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,16,0,0">
                        <Button Content="Load Pack" Margin="0,0,8,0" Padding="12,6" Click="LoadPack_Click"/>
                        <Button Content="Unload Pack" Margin="0,0,8,0" Padding="12,6" Click="UnloadPack_Click"/>
                        <Button Content="ðŸ”„ Refresh" Padding="12,6" Click="Refresh_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Activity Monitor Tab -->
            <TabItem Header="Activity Monitor">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Real-time Processing Status" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Frames Processed" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="FramesProcessedText" Text="0" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Text Detections" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="DetectionsText" Text="0" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Processing Rate" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="ProcessingRateText" Text="20.0 fps" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Monitoring Status" Style="{StaticResource MetricLabelStyle}"/>
                                <TextBlock x:Name="MonitoringStatusText" Text="Stopped" Style="{StaticResource MetricValueStyle}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="ActivityLogText" IsReadOnly="True" Background="Black" Foreground="LimeGreen" FontFamily="Consolas" 
                                 Text="GameWatcher V2 Platform - Activity Log&#x0a;&#x0a;[INFO] Engine initialized successfully&#x0a;[INFO] All V1 optimizations preserved&#x0a;[INFO] Performance: 4.1x faster processing&#x0a;[INFO] Ready for monitoring..."/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer>
                    <StackPanel Margin="16">
                        <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        
                        <GroupBox Header="Detection" Margin="0,0,0,16">
                            <StackPanel Margin="8">
                                <CheckBox Content="Enable optimized detection" IsChecked="True" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Confidence Threshold:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Slider Value="85" Minimum="0" Maximum="100" Width="200"/>
                                    <TextBlock Text="85%" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Performance" Margin="0,0,0,16">
                            <StackPanel Margin="8">
                                <CheckBox Content="Use V2 optimizations (recommended)" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Enable memory optimization" IsChecked="True" Margin="0,0,0,8"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Control Panel -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="16,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Start" Background="LimeGreen" Foreground="White" Padding="16,8" Margin="0,0,8,0" Click="Start_Click"/>
                    <Button Content="Stop" Padding="16,8" Margin="0,0,8,0" Click="Stop_Click"/>
                    <Button Content="ï¿½ Refresh" Padding="16,8" Margin="0,0,8,0" Click="Refresh_Click" ToolTip="Refresh game detection and pack discovery"/>
                </StackPanel>
                
                <TextBlock x:Name="BottomStatusText" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Text="GameWatcher V2 Platform - Ready" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>
        </Border>

    </Grid>
</Window>