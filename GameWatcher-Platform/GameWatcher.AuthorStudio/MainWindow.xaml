<Window x:Class="GameWatcher.AuthorStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWatcher Author Studio"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="12">
            <TextBlock Text="Author Studio — MVP"
                       FontSize="18" FontWeight="SemiBold"/>
        </DockPanel>

        <TabControl Grid.Row="1" Margin="12">
            <TabItem Header="Discovery">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Start" Width="90" Margin="0,0,8,0" Click="Start_Click"/>
                        <Button Content="Pause" Width="90" Margin="0,0,8,0" Click="Pause_Click"/>
                        <Button Content="Stop" Width="90" Click="Stop_Click"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" x:Name="DiscoveredGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="180"/>
                            <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Approved" Binding="{Binding Approved}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Pack Builder">
                <StackPanel Margin="8">
                    <TextBlock Text="Pack metadata and build (stub)"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Review">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Load Session" Margin="0,0,8,0" Click="LoadSession_Click"/>
                        <Button Content="Save Session" Click="SaveSession_Click"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" x:Name="ReviewGrid" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="180" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Text" Binding="{Binding Text, Mode=TwoWay}" Width="*"/>
                            <DataGridTextColumn Header="Edited" Binding="{Binding EditedText, Mode=TwoWay}" Width="*"/>
                            <DataGridComboBoxColumn Header="Speaker" SelectedValueBinding="{Binding SpeakerId, Mode=TwoWay}"
                                                     SelectedValuePath="Id" DisplayMemberPath="Name"
                                                     Width="220"/>
                            <DataGridTextColumn Header="Audio" Binding="{Binding AudioPath, Mode=TwoWay}" Width="250"/>
                            <DataGridCheckBoxColumn Header="Approved" Binding="{Binding Approved, Mode=TwoWay}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Attach Audio..." Margin="0,0,8,0" Click="AttachAudio_Click"/>
                        <Button Content="Generate TTS" Click="GenerateTts_Click"/>
                    </StackPanel>
                    <TextBlock Grid.Row="2" Text="Tip: Edit text, assign speakers, and mark Approved before exporting." Foreground="Gray" Margin="180,12,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Speakers">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Import JSON" Margin="0,0,8,0" Click="ImportSpeakers_Click"/>
                        <Button Content="Export JSON" Click="ExportSpeakers_Click"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" x:Name="SpeakersGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id, Mode=TwoWay}" Width="150"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay}" Width="200"/>
                            <DataGridComboBoxColumn Header="Voice" SelectedValueBinding="{Binding Voice, Mode=TwoWay}"
                                                     Width="150"/>
                            <DataGridTextColumn Header="Speed" Binding="{Binding Speed, Mode=TwoWay, StringFormat=F2}" Width="80"/>
                            <DataGridTextColumn Header="Stability" Binding="{Binding Stability, Mode=TwoWay, StringFormat=F2}" Width="80"/>
                            <DataGridTextColumn Header="Clarity" Binding="{Binding Clarity, Mode=TwoWay, StringFormat=F2}" Width="80"/>
                            <DataGridTextColumn Header="Priority" Binding="{Binding Priority, Mode=TwoWay}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Default" Binding="{Binding IsDefault, Mode=TwoWay}" Width="80"/>
                            <DataGridTextColumn Header="Color" Binding="{Binding Color, Mode=TwoWay}" Width="100"/>
                            <DataGridTextColumn Header="Keywords (csv)" Binding="{Binding KeywordsCsv, Mode=TwoWay}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Grid.Row="2" Text="Tip: Import from an existing pack’s speakers.json or build your own list here." Foreground="Gray" Margin="0,8,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Pack Builder">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Pack Name" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="PackNameBox" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="1">
                        <TextBlock Text="Display Name" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="DisplayNameBox" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="2">
                        <TextBlock Text="Version" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="VersionBox" Width="150" Text="1.0.0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="3">
                        <TextBlock Text="Output Folder" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="OutputFolderBox" Width="480"/>
                        <Button Content="Browse" Margin="8,0,0,0" Click="BrowseOutput_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0" Grid.Row="4">
                        <Button Content="Open Pack..." Width="150" Margin="0,0,8,0" Click="OpenPack_Click"/>
                        <Button Content="Export Pack" Width="150" Click="ExportPack_Click"/>
                        <TextBlock x:Name="ExportStatus" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
