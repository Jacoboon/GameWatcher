<Window x:Class="GameWatcher.AuthorStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="GameWatcher Author Studio"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header bar to match Studio -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Author Studio — MVP" FontSize="18" FontWeight="SemiBold" Foreground="White"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="TTS:" Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TtsStatus" Text="TTS unavailable: Configure key" Foreground="LightGreen" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" Margin="12" Style="{DynamicResource DefaultTabControlStyle}">
            <TabItem Header="Review">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>   <!-- Discovery controls + status -->
                        <RowDefinition Height="Auto"/>   <!-- Session load/save -->
                        <RowDefinition Height="*"/>     <!-- Review grid -->
                        <RowDefinition Height="Auto"/>   <!-- Attach/Generate bar -->
                        <RowDefinition Height="120"/>    <!-- Activity log -->
                    </Grid.RowDefinitions>
                    <!-- Discovery controls + status -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <Button Content="Start" Width="90" Margin="0,0,8,0" Click="Start_Click"/>
                            <Button Content="Pause" Width="90" Margin="0,0,8,0" Click="Pause_Click"/>
                            <Button Content="Stop" Width="90" Click="Stop_Click"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" x:Name="DiscoveryStatus" Text="Stopped" VerticalAlignment="Center" Foreground="Silver"/>
                    </Grid>

                    <!-- Session controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Load Session" Margin="0,0,8,0" Click="LoadSession_Click"/>
                        <Button Content="Save Session" Click="SaveSession_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" x:Name="ReviewGrid" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="180" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Text" Binding="{Binding Text, Mode=TwoWay}" Width="*"/>
                            <DataGridTextColumn Header="Edited" Binding="{Binding EditedText, Mode=TwoWay}" Width="*"/>
                            <DataGridComboBoxColumn Header="Speaker" SelectedValueBinding="{Binding SpeakerId, Mode=TwoWay}"
                                                     SelectedValuePath="Id" DisplayMemberPath="Name"
                                                     Width="220"/>
                            <DataGridTextColumn Header="Audio" Binding="{Binding AudioPath, Mode=TwoWay}" Width="250"/>
                            <DataGridTemplateColumn Header="Play" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Play" Padding="6,2" Click="PlayReviewItem_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn Header="Approved" Binding="{Binding Approved, Mode=TwoWay}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Attach/Generate bar with right-anchored tip -->
                    <Grid Grid.Row="3" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <Button Content="Attach Audio..." Margin="0,0,8,0" Click="AttachAudio_Click"/>
                            <Button Content="Generate TTS" Click="GenerateTts_Click"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="Tip: Edit text, assign speakers, and mark Approved before exporting." Foreground="Gray" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Activity log -->
                    <Border Grid.Row="4" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}" BorderThickness="1" Padding="8" Margin="0,8,0,0">
                        <ListBox x:Name="DiscoveryLogList" />
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Speakers">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Import JSON" Margin="0,0,8,0" Click="ImportSpeakers_Click"/>
                        <Button Content="Export JSON" Click="ExportSpeakers_Click"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" x:Name="SpeakersGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id, Mode=TwoWay}" Width="150"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay}" Width="200"/>
                            <DataGridComboBoxColumn Header="Voice" SelectedValueBinding="{Binding Voice, Mode=TwoWay}"
                                                     Width="150"/>
                            <DataGridTextColumn Header="Speed" Binding="{Binding Speed, Mode=TwoWay, StringFormat=F2}" Width="80"/>
                            <DataGridTextColumn Header="Color" Binding="{Binding Color, Mode=TwoWay}" Width="100"/>
                            
                            <DataGridTextColumn Header="Effects" Binding="{Binding Effects, Mode=TwoWay}" Width="200"/>
                            <DataGridTemplateColumn Header="Preview" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Preview" Padding="6,2" Click="PreviewSpeaker_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Grid.Row="2" Text="Tip: Import from an existing pack’s speakers.json or build your own list here." Foreground="Gray" Margin="0,8,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Pack Builder">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Pack Name" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="PackNameBox" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="1">
                        <TextBlock Text="Display Name" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="DisplayNameBox" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="2">
                        <TextBlock Text="Version" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="VersionBox" Width="150" Text="1.0.0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="3">
                        <TextBlock Text="Output Folder" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="OutputFolderBox" Width="480"/>
                        <Button Content="Browse" Margin="8,0,0,0" Click="BrowseOutput_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0" Grid.Row="4">
                        <Button Content="Open Pack..." Width="150" Margin="0,0,8,0" Click="OpenPack_Click"/>
                        <Button Content="Export Pack" Width="150" Click="ExportPack_Click"/>
                        <TextBlock x:Name="ExportStatus" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Author Studio Settings" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
                        <TextBlock Text="Audio Format" Width="140" VerticalAlignment="Center"/>
                        <ComboBox x:Name="AudioFormatCombo" Width="160" SelectionChanged="AudioFormatCombo_SelectionChanged">
                            <ComboBoxItem Content="wav"/>
                            <ComboBoxItem Content="mp3"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="OpenAI API Key" Width="140" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="TtsKeyBox" Width="260"/>
                        <Button Content="Save" Width="90" Margin="8,0,0,0" Click="SaveTtsKey_Click"/>
                        <Button Content="Remove" Width="90" Margin="8,0,0,0" Click="RemoveTtsKey_Click"/>
                    </StackPanel>

                    <TextBlock Grid.Row="3" TextWrapping="Wrap" Foreground="Gray" Margin="0,8,0,0">
                        The audio format applies to both generated dialogue lines and speaker previews.
                        Use the API Key controls above to add or remove your TTS key.
                    </TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
