<Window x:Class="GameWatcher.AuthorStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWatcher Author Studio"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="12">
            <TextBlock Text="Author Studio â€” MVP"
                       FontSize="18" FontWeight="SemiBold"/>
        </DockPanel>

        <TabControl Grid.Row="1" Margin="12">
            <TabItem Header="Discovery">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Start" Width="90" Margin="0,0,8,0"/>
                        <Button Content="Pause" Width="90" Margin="0,0,8,0"/>
                        <Button Content="Stop" Width="90"/>
                    </StackPanel>
                    <TextBlock Text="Discovered Dialogue (preview)" FontWeight="SemiBold"/>
                    <ListBox Height="400">
                        <ListBoxItem>Example line: "Welcome to Cornelia."</ListBoxItem>
                        <ListBoxItem>Example line: "I, Garland, will knock you all down!"</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Pack Builder">
                <StackPanel Margin="8">
                    <TextBlock Text="Pack metadata and build (stub)"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

